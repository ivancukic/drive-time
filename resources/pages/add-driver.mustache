      <div class="container">

        <br><br>
        <h3>Add New Driver</h3>
        <br><br>
        <div class="row">
        
            <form action="/add-driver/insertDriver"   method="POST">

                <div class="form-group">
                    <label for="name">Name And Last Name:</label>
                    <input type="text" name="name" class="form-control" 
                                                    placeholder="Enter Name And Last Name"
                                                    value="{{#name}}{{name}}{{/name}}"\><br><br> 
                </div>
                <div class="form-group">
                    <label for="name">Date Of Birth:</label>
                    <input type="date" name="dob" class="form-control" 
                                                    value="{{#dob}}{{dob}}{{/dob}}"\><br><br> <br>
                </div>

                <button type="submit" class="btn btn-dark-custom">Save</button>

            </form>

        </div>
        
        
      </div>

      <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50 fixed-bottom">
        <div class="container text-center">
          <small>Copyright &copy; Ivan Cukic</small>
        </div>
      </footer>

  </body>
