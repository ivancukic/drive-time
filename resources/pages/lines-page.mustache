<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- CSS -->
    <link rel="stylesheet" href="css/style.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <!-- Font Awesome -->
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet"> 

    <title>Web App For Drivers</title>
  </head>
  <body>

      <nav class="navbar navbar-expand-lg navbar-light">
          <a class="navbar-brand" href="/">
            <div class="logo-image">
              <img src="images/image__4_.png" class="img-fluid">
            </div>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-item nav-link" href="/">Home</a>
              <a class="nav-item nav-link" href="/drivers">Drivers</a>
              <a class="nav-item nav-link active" href="/lines">Lines</a>
              <a class="nav-item nav-link" href="/shift-table">Shifts</a>
            </div>
          </div>
        </nav>

      <div class="container">

        <br><br>
      <h2>Lines Page</h2>
      <br><br>

      <h3>All Lines List</h3>
      <br><br>

        <table class="table table-hover">

            <thead>

                <tr>
                    <th scope="col">Line ID</th>
                    <th scope="col">Line Name</th>
                    <th scope="col">Line Start Time</th>
                    <th scope="col">Line End Time</th>
                    <th scope="col">Total Time</th>
                    <th scope="col">Number Of Drivers Needed</th>
                    <th scope="col">Input Shift</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>

            </thead>
            <tbody>
                {{#publiclines}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name_of_line}}</td>                  
                        <td>{{start_time}}</td>       
                        <td>{{end_time}}</td> 
                        <td>{{total_time}}</td> 
                        <td>{{num_drivers}}</td> 
                        <td><a class="lin-col" href="/shiftsPlanning/{{id}}/{{num_drivers}}/shiftsPlanning"><i class="icon-male"></i></a></td>              
                        <td><a class="lin-col" href="/updateLine/{{id}}/updateLine"><i class="icon-edit-sign"></i></a></td>       
                        <td><a class="lin-col" href="/lines/{{id}}/removeLine"><i class="icon-remove"></i></a></td>
                    </tr>
                {{/publiclines}}
            </tbody>
        </table>
        
        <button type="button" class="btn btn-dark-custom"><a href="/add-line">Add New Line</a></button>
        <button type="button" class="btn btn-dark-custom"><a href="/shift-table">View Shift Table</a></button>
       
        
      </div>

      <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50 fixed-bottom">
        <div class="container text-center">
          <small>Copyright &copy; Ivan Cukic</small>
        </div>
      </footer>

  </body>
</html>
